{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false
    }
  },
  "compilerOptions": {
    "module": "ESNext",
    "checkJs": true,
    "removeComments": false,
    "declaration": true,
    "target": "esnext",
    "pretty": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
